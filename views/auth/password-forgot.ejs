<%- include('../partials/header', { title, extraCSS: '/styles/auth.css' }) %>

<main class="auth-container">
  <section class="auth-card">
    <h1 class="auth-title">パスワード再設定</h1>
    <p class="auth-lead">ご登録のメールアドレス宛に再設定リンクをお送りします。</p>

    <form method="post" action="/password/forgot" class="auth-form">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <label class="auth-label">メールアドレス</label>
      <input type="email" name="email" value="<%= values.email %>" class="auth-input" placeholder="you@example.com" required>
      <% if (fieldErrors.email) { %><div class="auth-error"><%= fieldErrors.email %></div><% } %>

      <button class="auth-button" type="submit">送信する</button>
    </form>

    <div class="auth-links">
      <a href="/login">ログインに戻る</a>
    </div>
  </section>
</main>

<%- include('../partials/footer') %>