<main class="page">

  <!-- ✅ 新着（横スクロール） -->
  <% if (newArrivals && newArrivals.length) { %>
  <section class="rail">
    <div class="rail__head">
      <h2>新着</h2>
      <a class="link" href="/products/list">すべて見る →</a>
    </div>
    <div class="rail__track">
      <% newArrivals.forEach(function(p){ %>
        <%- include('../partials/productCard', { p, currentUser, csrfToken }) %>
      <% }) %>
    </div>
  </section>
  <% } %>

  <!-- ✅ 閲覧履歴（条件付き） -->
  <% if (recent && recent.length) { %>
  <section class="rail">
    <div class="rail__head"><h2>閲覧履歴</h2></div>
    <div class="rail__track">
      <% recent.forEach(function(p){ %>
        <%- include('../partials/productCard', { p, currentUser, csrfToken }) %>
      <% }) %>
    </div>
  </section>
  <% } %>

  <!-- ✅ 人気商品ランキング -->
  <% if (popularWeekly && popularWeekly.length) { %>
  <section class="rail">
    <div class="rail__head">
      <div style="display: flex; align-items: center; gap: 12px;" class="sp-flex-column">
        <h2>人気商品ランキング</h2>
        <div class="ranking-tabs" style="display: flex; gap: 4px;">
          <button type="button" class="ranking-tab is-active" data-range="7d">週間</button>
          <button type="button" class="ranking-tab" data-range="30d">月間</button>
        </div>
      </div>
      <a class="link" href="/ranking/popular">すべて見る →</a>
    </div>
    <div class="rail__track" id="popularRankingTrack">
      <!-- 週間ランキング -->
      <div class="ranking-panel is-active" data-range="7d" style="display: flex;">
        <% popularWeekly.forEach(function(p, index){ %>
          <%- include('../partials/productCard', { p, currentUser, csrfToken, showRank: true, rank: index + 1 }) %>
        <% }) %>
      </div>
      <!-- 月間ランキング -->
      <div class="ranking-panel" data-range="30d" style="display: none;">
        <% if (popularMonthly && popularMonthly.length) { %>
          <% popularMonthly.forEach(function(p, index){ %>
            <%- include('../partials/productCard', { p, currentUser, csrfToken, showRank: true, rank: index + 1 }) %>
          <% }) %>
        <% } else { %>
          <p class="empty" style="padding: 40px 20px; text-align: center; color: var(--muted); width: 100%;">
            月間ランキングデータがありません
          </p>
        <% } %>
      </div>
    </div>
  </section>
  <% } %>

  <!-- ✅ みんなのお気に入り -->
  <% if (topFavorites && topFavorites.length) { %>
  <section class="rail">
    <div class="rail__head">
      <h2>みんなのお気に入り</h2>
      <a class="link" href="/ranking/favorites">すべて見る →</a>
    </div>
    <div class="rail__track">
      <% topFavorites.forEach(function(p){ %>
        <%- include('../partials/productCard', { p, currentUser, csrfToken, showFavoriteCount: true }) %>
      <% }) %>
    </div>
  </section>
  <% } %>

  <!-- ✅ 特集/コレクション -->
  <% if (collections && collections.length) { %>
  <section class="rail">
    <div class="rail__head"><h2>特集</h2></div>
    <div class="rail__track">
      <% collections.forEach(function(col){ %>
        <a class="collection" href="<%= buildQuery({collection:col.slug, page:1}) %>">
          <img src="<%= col.image %>" alt="<%= col.title %>">
          <span><%= col.title %></span>
        </a>
      <% }) %>
    </div>
  </section>
  <% } %>

  <!-- ✅ おすすめ -->
  <% if (recommended && recommended.length) { %>
  <section class="rail">
    <div class="rail__head"><h2>あなたへのおすすめ</h2></div>
    <div class="rail__track">
      <% recommended.forEach(function(p){ %>
        <%- include('../partials/productCard', { p, currentUser, csrfToken }) %>
      <% }) %>
    </div>
  </section>
  <% } %>

  <!-- ✅ 商品一覧（グリッド） -->
  <section class="grid-wrap">
    <div class="grid-head">
      <h2>商品一覧</h2>
      <span class="count">
        <%= Math.min((previewProducts || []).length, 20) %> / <%= previewTotal || 0 %> 件
      </span>
    </div>

    <% if (!previewProducts || !previewProducts.length) { %>
      <div class="empty">
        <p>該当する商品がありません。</p>
        <a class="btn btn--ghost" href="/products">条件を変更する</a>
      </div>
    <% } else { %>
      <div class="grid">
        <% previewProducts.forEach(function(p){ %>
          <%- include('../partials/productCard', { p, currentUser, csrfToken }) %>
        <% }) %>
      </div>

      <div style="text-align:center; margin-top:1rem;">
        <a class="btn" href="/products/list">
          すべての商品（全 <%= previewTotal %> 件）を見る →
        </a>
      </div>
    <% } %>
  </section>

  <!-- 信頼シグナル -->
  <!-- <section class="trust">
    <div class="trust__item">🚚 週2回出荷</div>
    <div class="trust__item">❄️ 冷蔵・常温選択可</div>
    <div class="trust__item">🔍 トレーサビリティ表示</div>
    <div class="trust__item">↩︎ 返品ポリシー明確</div>
  </section> -->
</main>

<script>
  /* クエリ生成をEJSで楽にするユーティリティ */
  function buildQueryObj(base, patch){
    const o = Object.assign({}, base, patch);
    Object.keys(o).forEach(k => (o[k]===undefined || o[k]==='' || o[k]===null) && delete o[k]);
    return o;
  }

  // ランキングタブの切り替え
  document.addEventListener('DOMContentLoaded', () => {
    const tabs = document.querySelectorAll('.ranking-tab[data-range]');
    const panels = document.querySelectorAll('.ranking-panel');
    
    tabs.forEach(tab => {
      tab.addEventListener('click', (e) => {
        e.preventDefault();
        const range = tab.dataset.range;
        
        // タブのアクティブ状態を更新
        tabs.forEach(t => {
          t.classList.toggle('is-active', t === tab);
        });
        
        // パネルの表示を切り替え
        panels.forEach(panel => {
          const isActive = panel.dataset.range === range;
          panel.classList.toggle('is-active', isActive);
          panel.style.display = isActive ? 'flex' : 'none';
        });
      });
    });
  });
</script>

