<section class="card">
  <div class="card__head">
    <h2>最近見た商品</h2>
    <a class="link" href="/products/list?sort=new">商品一覧 →</a>
  </div>
  <div class="rail__track rail__track--tight">
    <% if (recent && recent.length) { %>
      <% recent.slice(0,12).forEach(function(p){ %>
        <a class="card-mini" href="/products/<%= p.slug %>" data-product-id="<%= p.id %>">
          <img src="<%= p.image %>" alt="<%= p.title %>">
          <div class="card-mini__cap">
            <strong><%= p.name %></strong>
            <span class="muted">¥<%= p.price %></span>
          </div>
        </a>
      <% }) %>
    <% } else { %>
      <p class="empty">まだ閲覧履歴がありません。</p>
    <% } %>
  </div>
</section>