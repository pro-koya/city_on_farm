<section class="card">
  <div class="card__head">
    <h2>売上ダッシュボード</h2>
    <a class="link" href="/seller/analytics">詳細 →</a>
  </div>

  <script>
    // server.js で res.render の値: { revenueCardData }
    window.__REV_CARD__ = <%- JSON.stringify(revenueCardData || { month: [], week: [], all: [] }) %>;
  </script>

  <!-- タブ（今月/今週/全期間） -->
  <div class="kpis tabs">
    <button class="tab" data-range="week">今週</button>
    <button class="tab is-active" data-range="month">今月</button>
    <button class="tab" data-range="all">全期間</button>
  </div>

  <!-- コンボチャート：売上=Bar / 注文数=Line -->
  <div class="chart-wrap">
    <canvas id="revCombo" aria-label="売上/件数チャート"></canvas>
  </div>
</section>