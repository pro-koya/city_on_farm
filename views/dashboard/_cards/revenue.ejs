<section class="card">
  <div class="card__head">
    <h2>売上ダッシュボード</h2>
    <a class="link" href="/seller/analytics">詳細 →</a>
  </div>
  <div class="kpis">
    <div class="kpi">
      <span class="kpi__label">本日</span>
      <strong>¥<%= (revenue && revenue.today) ? revenue.today.toLocaleString() : 0 %></strong>
    </div>
    <div class="kpi">
      <span class="kpi__label">今月</span>
      <strong>¥<%= (revenue && revenue.month) ? revenue.month.toLocaleString() : 0 %></strong>
    </div>
  </div>

  <!-- 素のCanvasで軽量スパークライン -->
  <canvas class="spark" id="revSpark" height="64"
          data-points="<%= JSON.stringify((revenue && revenue.chart) || []) %>"
          aria-label="売上推移ミニチャート"></canvas>
</section>