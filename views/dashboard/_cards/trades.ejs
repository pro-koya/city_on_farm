<section class="card">
  <div class="card__head">
    <h2>取引履歴</h2>
    <a class="link" href="/seller/trades">すべて見る →</a>
  </div>
  <ul class="list">
    <% if (trades && trades.length) { %>
      <% trades.forEach(function(t){ %>
        <li class="row">
          <span class="mono">#<%= t.id %></span>
          <span><%= t.date %></span>
          <span class="<%= /完了|配達完了|支払い済み/.test(t.status)?'ok' : /キャンセル|返金済み/.test(t.status)?'ng' : 'pending' %>">
            <%= t.status %>
          </span>
          <span>¥<%= Number(t.amount||0).toLocaleString() %></span>
        </li>
      <% }) %>
    <% } else { %>
      <li class="empty">まだ取引がありません。</li>
    <% } %>
  </ul>
</section>