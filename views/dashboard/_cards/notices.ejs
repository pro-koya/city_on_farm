<section class="card card--notices">
  <div class="card__head">
    <h2>お知らせ</h2>
    <a class="btn btn--sm btn--ghost" href="/my/notifications">
      すべて見る
    </a>
  </div>

  <ul class="notices">
    <% if (notices && notices.length) { %>
      <% notices.slice(0,5).forEach(function(n){ %>
        <% const isRead = !!n.is_read; %>
        <li class="notice <%= isRead ? 'is-read' : 'is-unread' %>">
          <span class="dot" aria-hidden="true"></span>
          <a class="notice__title" href="/my/notifications/<%= n.id %>">
            <%= n.title %>
          </a>
          <time class="muted notice__time"
                datetime="<%= new Date(n.created_at).toISOString() %>">
            <%= new Date(n.created_at).toLocaleDateString('ja-JP', {
                  month: '2-digit',
                  day: '2-digit'
                }) %>
          </time>
        </li>
      <% }) %>
    <% } else { %>
      <li class="empty">新しいお知らせはありません。</li>
    <% } %>
  </ul>
</section>