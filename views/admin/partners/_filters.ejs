<div class="lv__filter">
  <label class="lv__label" for="fType">種別</label>
  <select class="lv__select" id="fType" name="type">
    <option value="">すべて</option>
    <option value="restaurant" <%= typeVal==='restaurant'?'selected':'' %>>飲食店</option>
    <option value="retailer"   <%= typeVal==='retailer'  ?'selected':'' %>>小売</option>
    <option value="wholesale"  <%= typeVal==='wholesale' ?'selected':'' %>>卸</option>
    <option value="corporate"  <%= typeVal==='corporate' ?'selected':'' %>>法人</option>
    <option value="individual" <%= typeVal==='individual'?'selected':'' %>>個人</option>
    <option value="other"      <%= typeVal==='other'     ?'selected':'' %>>その他</option>
  </select>
</div>

<div class="lv__filter">
  <label class="lv__label" for="fStatus">状態</label>
  <select class="lv__select" id="fStatus" name="status">
    <option value="">すべて</option>
    <option value="active"    <%= statusVal==='active'   ?'selected':'' %>>稼働中</option>
    <option value="prospect"  <%= statusVal==='prospect' ?'selected':'' %>>見込み</option>
    <option value="inactive"  <%= statusVal==='inactive' ?'selected':'' %>>停止</option>
    <option value="suspended" <%= statusVal==='suspended'?'selected':'' %>>一時停止</option>
  </select>
</div>

<div class="lv__filter">
  <label class="lv__label" for="fSort">並び順</label>
  <select class="lv__select" id="fSort" name="sort">
    <option value="recent"     <%= sortVal==='recent'    ?'selected':'' %>>新しい順</option>
    <option value="name_asc"   <%= sortVal==='name_asc'  ?'selected':'' %>>名前(昇順)</option>
    <option value="name_desc"  <%= sortVal==='name_desc' ?'selected':'' %>>名前(降順)</option>
    <option value="updated"    <%= sortVal==='updated'   ?'selected':'' %>>更新が新しい順</option>
  </select>
</div>